{
  "extends": "tsconfig/base.json",
  "include": ["."],
  "exclude": ["dist", "build", "node_modules"],
  "compilerOptions": {
    "target": "es2016",
    "module": "commonjs",
    "removeComments": true,
    "noImplicitAny": true,
    "noImplicitThis": true,
    "alwaysStrict": true,
    "skipLibCheck": true,
    "rootDir": ".",
    "sourceMap": true,
    "outDir": "dist"
  }
}
