{
  "include": ["**/*.ts", "**/*.tsx"],
  "extends": "tsconfig/base.json",
  "exclude": ["node_modules", "src/test", "dist"],
  "compilerOptions": {
    "target": "es2016",
    "module": "commonjs",
    "resolveJsonModule": true,
    "removeComments": true,
    "noImplicitAny": true,
    "noImplicitThis": true,
    "useUnknownInCatchVariables": true,
    "alwaysStrict": true,
    "skipLibCheck": true,
    "rootDir": "./src",
    "typeRoots": ["node_modules/@types", "src/@types"],
    "sourceMap": true,
    "outDir": "dist"
  }
}
